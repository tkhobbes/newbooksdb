<%= turbo_frame_tag 'page' do %>
  <%= turbo_stream_action_tag(
    'append',
    target: 'books',
    template: %(#{render @books})
  ) %>
  <%= turbo_stream_action_tag(
    'replace',
    target: 'pager',
    template: %(#{render 'shared/pager', pagy: @pagy, model_path: search_index_path(page: @pagy.next, show: params[:show], query: params[:query])})
    ) %>
<% end %>
