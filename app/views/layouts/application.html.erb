<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :browser_title %>UZW18 Books Database</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "main", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body <%= yield :body_attributes %>>
    <div class="container" data-controller="burgermenu">
      <%= render 'shared/sidebar' %>
      <div class="content">
        <%= render 'shared/title' %>
        <main class="main">
        <%= render "shared/notification" %>
        <%= render 'shelves/shelves_menu' if params[:controller] == 'books' && params[:action] == 'index' %>
            <%= yield :title %>
            <%= yield %>
        </main>
        <%= render 'shared/footer' %>
      </div>
    </div>
  </body>
  <%= render 'shared/modal' %>
</html>
