<!DOCTYPE html>
<html>
  <head>
    <title>UZW18 Books Database</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "main", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <div class="container" data-controller="burgermenu">
      <%= render 'shared/sidebar' %>
      <div class="content">
        <%= render 'shared/title' %>
        <main class="main">
        <%= render "shared/notification" %>
          <nav class="tabs">
            <ul>
              <li class="placeholder-tab">&nbsp;</li>
              <li><a href="#" class="active">Office T</a></li>
              <li class="placeholder-tab">&nbsp;</li>
              <li><a href="#">Office N</a></li>
              <li class="placeholder-tab">&nbsp;</li>
              <li><a href="#">Living Room</a></li>
              <li class="placeholder-tab">&nbsp;</li>
            </ul>
          </nav>
            <%= yield %>
        </main>
        <%= render 'shared/footer' %>
      </div>
    </div>
  </body>
</html>
