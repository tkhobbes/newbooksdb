<%= page_title(t('.sign_up'),'', 'heading2') %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/form_errors', form: f %>

  <div class='big-form width-50'>
    <div class='form-col'>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: t('.email'),
                  label: false,
                  input_html: { autocomplete: 'email' }%>
      <%= f.input :password,
                  required: true,
                  label: false,
                  placeholder: t('.password'),
                  hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                  input_html: { autocomplete: 'new-password' } %>
      <%= f.input :password_confirmation,
                  required: true,
                  placeholder: t('.password_confirmation'),
                  label: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.button :submit, t('.sign_up') %>
      <div class='margin-top-50 flexlist'>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
<% end %>
