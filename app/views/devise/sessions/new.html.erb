<%= page_title('Log In','', 'heading2') %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render 'shared/form_errors', form: f %>

  <div class='big-form width-50'>
    <div class='form-col'>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: 'email' },
                  placeholder: 'E-Mail',
                  label: false %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: 'current-password' },
                  placeholder: 'Password',
                  label: false %>
      <% if devise_mapping.rememberable? %>
        <div class='input checkbox-container'>
          <span class='check'>
            <%= f.check_box :remember_me, class: 'hidden-button' %>
            <label id='label_remember_me' for='owner_remember_me'>
              <span class='fake-button'>
              </span>
              Remember me on this computer
            </label>
          </span>
        </div>
      <% end %>
      <%= f.button :submit, 'Log in' %>
      <div class='margin-top-50 flexlist'>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
<% end %>

