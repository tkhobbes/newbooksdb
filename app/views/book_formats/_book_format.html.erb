<%= turbo_frame_tag(book_format) do %>
  <li>
    <div class="flexlist">
      <%= link_to(
        "#{book_format.name}#{t('BookFormats.book_format.default') if book_format.fallback} - #{pluralize(book_format.books_count, Book.model_name.human)}",
        edit_book_format_path(book_format)
       ) %>
      <%= render 'shared/crud_icons',
        edit_path: edit_book_format_path(book_format),
        delete_path: book_format_path(book_format),
        item_name: "#{book_format.name}, (#{book_format.books_count} #{t('BookFormats.book_format.delete_name')} '#{@default_book_format.name}')",
        url: book_format_path(book_format),
        edit_answer: 'turbo',
        delete_answer: 'turbo',
        redirect_url: '/book_formats'
      %>
    </div>
  </li>
<% end %>
