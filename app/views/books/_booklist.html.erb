<%= turbo_frame_tag book, class: "booklist__border" do %>
  <li class="booklist__item">
    <div class="booklist__cover">
      <%= cover_image(book, size: "default") %>
    </div>
    <div class="booklist__title">
      <%= link_to book.title, book_path(book) %>
      (by Author Author )
    </div>
    <div class="booklist__icons">
      <%= render 'shared/crud_icons',
        edit_path: edit_book_path(book),
        delete_path: book_path(book),
        item_name: book.title,
        url: "/books/#{book.id}",
        redirect_url: "/books",
        answer: "turbo",
        use_turbo: true
      %>
    </div>
  </li>
<% end %>
