<%= turbo_frame_tag 'page' do %>
  <%= turbo_stream_action_tag(
    'append',
    target: 'tags',
    template: %(#{render @tags})
  ) %>
  <%= turbo_stream_action_tag(
    'replace',
    target: 'pager',
    template: %(#{render 'shared/pager', pagy: @pagy, model_path: tags_path(page: @pagy.next, list: params[:list])})
    ) %>
<% end %>
