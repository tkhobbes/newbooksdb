<%= page_title(t('Tags.admin.title'), '', 'heading3') %>

<%= render 'settings/settings_menu' %>
  <div class="submenucontent">
    <h3 class="heading4">
      <%= t('Tags.admin.subtitle') %>
    </h3>
    <ul class="simple-list width-66 margin-bottom-1" id="tags">
      <%= render 'new_form_entry' %>
      <% if @tags.size > 0 %>
        <%= turbo_frame_tag 'format-list' do %>
          <%= render @tags %>
        <% end %>
      <% else %>
        <div class="margin-top-1">
          <%= t('Tags.admin.no_tags') %>
        </div>
      <% end %>
    </ul>
  </div>
</div>
