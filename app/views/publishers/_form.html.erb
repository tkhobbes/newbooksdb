  <%= simple_form_for publisher do |f| %>
    <%= render 'shared/form_errors', form: f %>
    <div class="big-form">
      <div class="form-col col-wide">
        <%= f.input :name, placeholder: 'Publisher Name', label: false %>
        <%= f.input :location, placeholder: 'Publisher Location', label: false %>
      </div>
    </div>
    <%= f.button :submit, 'data-action': 'click->coverdrop#submitAll' %>
    <%= back_link %>
  <% end %>
