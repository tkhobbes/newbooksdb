<h1 class="heading2">Login</h1>
<%= form_with(url: login_path, scope: :session) do |f| %>

  <div class="big-form">
    <div class="form-col">
      <div class="input">
        <%= f.email_field :email, placeholder: 'E-Mail'%>
      </div>
      <div class="input">
        <%= f.password_field :password, placeholder: 'Password'%>
      </div>
      <div class="input">
        <%= link_to 'Forgot Password?', new_password_reset_path,
          class: 'small color-accent-dark color-hover-primary' %>
      </div>
      <div class="input checkbox-container">
        <span class="check">
          <%= f.check_box :remember_me, class: 'hidden-button' %>
          <label id="label_remember_me" for="session_remember_me">
            <span class="fake-button">
            </span>
            Remember me on this computer
          </label>
        </span>
      </div>
    </div>
  </div>

  <%= f.submit 'Log in', class: 'btn' %>
  <%= link_to 'New User? Register here', new_user_path, class: 'form-cancel-button' %>
<% end %>
