      <li class="placeholder-tab">&nbsp;</li>
      <li class="content-tab <%= 'active' if current_page?(stats_path(list: 'books', type: 'shelf'), check_parameters: true) %>">
        <%= link_to t('Stats.books.by_shelf'),
          stats_path(list: 'books', type: 'shelf'),
          target: :book_statistics %>
      </li>
    <% end %>
    <li class="placeholder-tab">&nbsp;</li>
  </ul>
</nav>

<%= turbo_frame_tag :book_statistics do %>
  <%= render 'stats/books/book' %>
<% end %>

