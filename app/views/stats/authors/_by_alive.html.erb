<div
  data-controller="chart-select"
  data-chart-select-id-value="statChart"
  data-chart-select-criteria-value="alive"
  data-chart-select-url-value="<%= stats_authors_path %>">
  <h4 class="heading4">
    <%= t('Stats.authors.by_alive') %>
  </h4>
  <% deadalive = {
    alive: @authors.alive.count,
    dead: @authors.dead.count
  } %>
  <%= pie_chart deadalive, defer: false, id: 'statChart' %>

  <%= render 'authors/stats', authors: @authors.limit(10) %>
</div>
