<% list = params[:list] == 'author' ? Author.model_name.human : Book.model_name.human %>
<%= page_title(t('Stats.index.title', list:),'', 'heading2') %>

<nav class="pagination list-select-type">
  <span class="page">
    <%= link_to stats_path(list: 'books'),
      title: t('Stats.index.show_books'),
      class: 'list-select-item' do %>
      <%= inline_svg_tag 'book.svg', class: 'smallicon' %>
    <% end %>
  </span>
  <span class="page">
    <%= link_to stats_path(list: 'authors'),
      title: t('Stats.index.show_authors'),
      class: 'list-select-item' do %>
      <%= inline_svg_tag 'person.svg', class: 'smallicon' %>
    <% end %>
  </span>
</nav>

<div class="margin-top-1 margin-left-50 margin-right-50">
  <%= params[:list] == 'authors' ? render('stats/authors') : render('stats/books') %>
</div>
