<%= page_title(t('Genres.admin.title'), '', 'heading3') %>

<%= render 'settings/settings_menu' %>
  <div class="submenucontent">
    <h3 class="heading4">
      <%= t('Genres.admin.available_title') %>
    </h3>
    <ul class="simple-list width-66 margin-bottom-1" id="genres">
      <%= render 'new_form_entry' %>
      <% if @genres.size > 0 %>
        <%= turbo_frame_tag 'format-list' do %>
          <%= render @genres %>
        <% end %>
      <% else %>
        <div class="margin-top-1">
          <%= t('Genres.admin.no_genres') %>
        </div>
      <% end %>
    </ul>
  </div>
</div>



