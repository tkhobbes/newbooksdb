<%= turbo_frame_tag 'page' do %>
  <%= turbo_stream_action_tag(
    'append',
    target: 'genres',
    template: %(#{render @genres})
  ) %>
  <%= turbo_stream_action_tag(
    'replace',
    target: 'pager',
    template: %(#{render 'shared/pager', pagy: @pagy, model_path: genres_path(page: @pagy.next, show: params[:show])})
    ) %>
<% end %>
