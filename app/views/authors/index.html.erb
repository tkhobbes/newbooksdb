<%= render AbcNavigateComponent.new(
  model: 'Author',
  existing_scopes: current_scopes,
  sort_column: :sort_name,
  current_letter: params[:letter]
  ) %>

<%= page_title('Authors','', 'heading2') %>

<div class="flex">

  <%= link_to 'Add Author',
    new_author_path,
    class: 'button-color-accent margin-right-50 small'
  %>

  <%= render SortComponent.new(
    model: 'Author',
    field: :sort_name,
    existing_scopes: current_scopes
  ) %>

  <%= render SortComponent.new(
    model: 'Author',
    field: :born,
    existing_scopes: current_scopes
  ) %>

  <%= render SortComponent.new(
    model: 'Author',
    field: :died,
    existing_scopes: current_scopes
  ) %>

  <%= render SortComponent.new(
    model: 'Author',
    field: :rating,
    existing_scopes: current_scopes
  ) %>

  <%= render SortComponent.new(
    model: 'Author',
    field: :gender,
    existing_scopes: current_scopes
  ) %>

  <%= render SortComponent.new(
    model: 'Author',
    field: :books_count,
    existing_scopes: current_scopes
  ) %>

</div>

<%= turbo_frame_tag 'page' %>
<nav class="pagination list-select-type">
  <span class="page">
    <%= link_to authors_path(show: 'grid'), title: 'Display as grid', class: 'list-select-item' do %>
      <%= inline_svg_tag 'grid.svg', class: 'smallicon' %>
    <% end %>
  </span>
  <span class="page">
    <%= link_to authors_path(show: 'list'), title: 'Display as list', class: 'list-select-item' do %>
      <%= inline_svg_tag 'list.svg', class: 'smallicon' %>
    <% end %>
  </span>
</nav>
<% if params[:show] == 'list' %>
  <ul class="itemlist" id="authors">
    <%= render @authors %>
  </ul>
<% else %>
  <div class="flexlist" id="authors">
    <%= render @authors %>
  </div>
<% end %>


<%= render 'shared/pager', pagy: @pagy, model_path: authors_path(page: @pagy.next, show: params[:show]) %>

