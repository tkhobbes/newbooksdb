<%= page_title('Authors','', 'heading2') %>

<div class="margin-top-1 margin-left-50 margin-bottom-1">
  <%= link_to 'Add Author', new_author_path, class: 'button-color-secondary' %>
</div>

<%= turbo_frame_tag 'page' %>
<nav class="pagination list-select-type">
  <span class="page">
    <%= link_to authors_path(show: 'grid'), title: 'Display as grid', class: 'list-select-item' do %>
      <%= inline_svg_tag 'grid.svg', class: 'smallicon' %>
    <% end %>
  </span>
  <span class="page">
    <%= link_to authors_path(show: 'list'), title: 'Display as list', class: 'list-select-item' do %>
      <%= inline_svg_tag 'list.svg', class: 'smallicon' %>
    <% end %>
  </span>
</nav>
<% if params[:show] == 'list' %>
  <ul class="itemlist" id="authors">
    <%= render @authors %>
  </ul>
<% else %>
  <div class="flexlist" id="authors">
    <%= render @authors %>
  </div>
<% end %>


<%= render 'shared/pager', pagy: @pagy, model_path: authors_path(page: @pagy.next, show: params[:show]) %>

