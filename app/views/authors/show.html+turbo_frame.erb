<%= turbo_frame_tag 'page' do %>
  <%= turbo_stream_action_tag(
    'append',
    target: 'author_books',
    template: %(#{render @books})
  ) %>
  <%= turbo_stream_action_tag(
    'replace',
    target: 'pager',
    template: %(#{render 'shared/pager', pagy: @pagy, model_path: author_path(@author, page: @pagy.next, show: 'list')})
    ) %>
<% end %>
