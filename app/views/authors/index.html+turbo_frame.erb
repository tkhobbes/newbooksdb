<%= turbo_frame_tag 'page' do %>
  <%= turbo_stream_action_tag(
    'append',
    target: 'authors',
    template: %(#{render @authors})
  ) %>
  <%= turbo_stream_action_tag(
    'replace',
    target: 'pager',
    template: %(#{render 'shared/pager', pagy: @pagy, model_path: authors_path(page: @pagy.next, show: params[:show])})
    ) %>
<% end %>
